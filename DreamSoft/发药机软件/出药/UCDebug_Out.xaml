                                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="1" Content="0" Tag="06" Margin="5" FontSize="24" Click="btPos_ReadRecord_Click" />
                                    <Button Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" Content="清零" Tag="06" Margin="5" FontSize="18" Click="btPos_ClearRecord_Click" />
                                </Grid>
                            </Border>

                            <Border Grid.Row="1" Grid.Column="1" BorderThickness="2" BorderBrush="Black" CornerRadius="5" Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
