                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" Grid.Column="0" BorderThickness="2" BorderBrush="Black" CornerRadius="5" Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Content="01" Tag="01" Margin="5" FontSize="24" Click="btPos_DCT_Click" />
                                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="1" Content="0" Tag="01" Margin="5" FontSize="24" Click="btPos_ReadRecord_Click" />
                                    <Button Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" Content="清零" Tag="01" Margin="5" FontSize="18" Click="btPos_ClearRecord_Click" />
                                </Grid>
                            </Border>

                            <Border Grid.Row="0" Grid.Column="1" BorderThickness="2" BorderBrush="Black" CornerRadius="5" Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Content="02" Tag="02" Margin="5" FontSize="24" Click="btPos_DCT_Click" />
                                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="1" Content="0" Tag="02" Margin="5" FontSize="24" Click="btPos_ReadRecord_Click" />
                                    <Button Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" Content="清零" Tag="02" Margin="5" FontSize="18" Click="btPos_ClearRecord_Click" />
                                </Grid>
                            </Border>

                            <Border Grid.Row="0" Grid.Column="2" BorderThickness="2" BorderBrush="Black" CornerRadius="5" Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Content="03" Tag="03" Margin="5" FontSize="24" Click="btPos_DCT_Click" />
                                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="1" Content="0" Tag="03" Margin="5" FontSize="24" Click="btPos_ReadRecord_Click" />
                                    <Button Grid.Row="1" Grid.Column="1" Grid.RowSpan="1" Content="清零" Tag="03" Margin="5" FontSize="18" Click="btPos_ClearRecord_Click" />
