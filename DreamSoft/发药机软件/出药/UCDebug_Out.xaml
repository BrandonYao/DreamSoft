                                    <Button Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Content="08" Tag="08" Margin="5" FontSize="24" Click="btPos_DCT_Click" />
                                    <Button Grid.Row="0" Grid.Column="1" Grid.RowSpan="1" Content="0" Tag="08" Margin="5" FontSize="24" Click="btPos_ReadRecord_Click" />
