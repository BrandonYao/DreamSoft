                            <!--TextBlock Grid.Row="4" Foreground="Black" FontWeight="Normal" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16">鼠标中键：清零</TextBlock-->
                        </Grid>
                        <Grid Grid.Column="1" Name="grid_Pos">
