                                </Grid>
                            </Border>

                            <Border Grid.Row="0" Grid.Column="4" BorderThickness="2" BorderBrush="Black" CornerRadius="5" Margin="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
